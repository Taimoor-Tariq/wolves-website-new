nav#sidebar.sidebar-wrapper
    .sidebar-content
        .sidebar-brand
            a(href='#')
                img(src="/logos/logo_wide_alt.png", alt="LOGO" width="100%")

        .sidebar-header
            .user-pic
                img.img-responsive.img-rounded(src='https://raw.githubusercontent.com/azouaoui-med/pro-sidebar-template/gh-pages/src/img/user.jpg' alt='User picture')
            .user-info
                span.user-name #{perms['USERNAME']}
                span.user-role Administrator
                span
                    a(href='/login').log-out Logout

        .sidebar-menu
            ul
                if perms['PEOPLE.PLAYERS'] || perms['PEOPLE.CONTENT'] || perms['PEOPLE.STAFF'] || perms['EVENTS']
                    li.header-menu
                        span General

                    if perms['PEOPLE.PLAYERS'] || perms['PEOPLE.CONTENT'] || perms['PEOPLE.STAFF']
                        li.sidebar-dropdown(class=active=="PEOPLE"?"selected active":"")
                            a(href='#')
                                i.fa.fa-users
                                span &nbsp; People
                            .sidebar-submenu(style=active=="PEOPLE"?"display: block;":"")
                                ul
                                    if perms['PEOPLE.STAFF']
                                        li
                                            a(href='/dashboard/people.staff') Staff

                                    if perms['PEOPLE.PLAYERS']
                                        li
                                            a(href='/dashboard/people.players') Players
                                    
                                    if perms['PEOPLE.CONTENT']
                                        li
                                            a(href='/dashboard/people.content') Content


                    if perms['PAGES.CAROUSEL'] || perms['PAGES.ABOUT']
                        li.sidebar-dropdown(class=active=="PAGES"?"selected active":"")
                            a(href='#')
                                i.fa.fa-copy
                                span &nbsp; Pages
                            .sidebar-submenu(style=active=="PAGES"?"display: block;":"")
                                ul
                                    if perms['PAGES.CAROUSEL']
                                        li
                                            a(href='/dashboard/pages.carousel') Carousel

                                    if perms['PAGES.ABOUT']
                                        li
                                            a(href='/dashboard/pages.about') About



                    if perms['EVENTS']
                        li(class=active=="EVENTS"?"selected":"")
                            a(href='/dashboard/events')
                                i.fa.fa-calendar-alt
                                span &nbsp; Events


                li.header-menu
                    span Extra

                li(class=active=="IMAGES"?"selected":"")
                    a(href='/dashboard/images')
                        i.fa.fa-images
                        span &nbsp; Images

                li(class=active=="DISCORD"?"selected":"")
                    a(href='/dashboard/discord')
                        i.fab.fa-discord
                        span &nbsp; Discord


    .sidebar-footer
        a &copy; 2021 - Wichita Wolves